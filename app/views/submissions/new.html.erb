<h1>New Submission</h1>

<%= form_for :submission, url: submissions_path do |f| %>
	<%= f.label :guess1 %>
	<%= f.select(:guess1, ['one', 'two', 'three']) %>

	<%= f.label :guess2 %>
	<%= f.select(:guess2, ['one', 'two', 'three']) %>

	<%= f.label :guess3 %>
	<%= f.select(:guess3, ['one', 'two', 'three']) %>

	<%= f.submit "Submit Guesses", class: "btn btn-primary" %>
<% end %>

